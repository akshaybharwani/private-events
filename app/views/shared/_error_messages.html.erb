<% if object.errors.any? %>
  <div id="error_container">
    <div class="alert alert-danger">
      This form contains <%= pluralize(objects.errors.count, "error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>